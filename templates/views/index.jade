extends ../layouts/default

block content
	.container: .jumbotron
		img(src='/images/13.png', width='200')
		h2 &nbsp;&nbsp;Welcome
		hr
		p <strong>Advanced Database Technology  Report & Marking System </strong>
		hr
		if user && user.canAccessKeystone
			if user.name.first!="Admin"
				p
					each post in data.posts.results
						if post.state == 'published'
							a(href='report/post/'+post.slug) 2							
						else if post.state == 'draft'
							a(href='keystone/posts/'+post._id) post.title

					a(href='keystone/posts').btn.btn-lg.btn-primary Report
			else
				p
					a(href='/keystone/').btn.btn-lg.btn-primary Enter

